@model BookTableViewModel

<section id="book-a-table" class="book-a-table section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Book A Table</h2>
        <p><span>Book Your</span> <span class="description-title">Stay With Us<br></span></p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row g-0" data-aos="fade-up" data-aos-delay="100">

            <div class="col-lg-4 reservation-img sora" style="background-image: url('@Url.Content("~/assets/img/reservation3.png")');"></div>

            <div class="col-lg-8 d-flex align-items-center reservation-form-bg" data-aos="fade-up" data-aos-delay="200">
                <form action="/Booking/BookTable" method="post" role="form">
                    <div class="row gy-4">
                        <div class="col-lg-4 col-md-6">
                            <input type="date" name="date" class="form-control" id="date" placeholder="Date" required="">
                            <span class="text-danger">@Html.ValidationMessageFor(m => m.Date)</span>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="time" class="form-control" name="time" id="time" placeholder="Time" required="">
                            <span class="text-danger">@Html.ValidationMessageFor(m => m.Time)</span>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="number" class="form-control" name="duration" id="duration" placeholder="Duration in Hours" required="">
                            <span class="text-danger">@Html.ValidationMessageFor(m => m.Duration)</span>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="number" class="form-control" name="tablecount" id="tablecount" placeholder="Number of Tables" required="">
                            <span class="text-danger">@Html.ValidationMessageFor(m => m.TableCount)</span>
                        </div>
                        <div class="col-lg-4 col-md-6">
                        </div>
                        <div class="col-lg-4 col-md-6">
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <textarea class="form-control" name="message" rows="5" placeholder="Message"></textarea>
                    </div>

                    <div class="text-center mt-3">                        
                        <div class="sent-message">Your booking request was sent. We will call back or send an Email to confirm your reservation. Thank you!</div>
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <p>@error.ErrorMessage</p>
                                }
                            </div>
                        }
                        else if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success">
                                @TempData["SuccessMessage"]
                            </div>
                        }
                        <button type="submit">Book a Table</button>
                    </div>
                </form>
            </div><!-- End Reservation Form -->

        </div>

    </div>

</section><!-- /Book A Table Section -->
