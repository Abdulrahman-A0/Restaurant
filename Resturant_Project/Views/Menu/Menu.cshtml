@model List<Category>
@functions {
    string Slugify(string text)
    {
        return text.ToLower().Replace(" ", "-").Replace("&", "").Replace("#", "");
    }
}
<!-- Menu Section -->
<section id="menu" class="menu section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Our Menu</h2>
        <p><span>Check Our</span> <span class="description-title">Yummy Menu</span></p>
    </div><!-- End Section Title -->

    <div class="container">

        <ul class="nav nav-tabs d-flex justify-content-center" data-aos="fade-up" data-aos-delay="100">
            @for (int i = 0; i < Model.Count; i++)
            {
                var category = Model[i];
                var slug = Slugify(category.Name);
                <li class="nav-item">
                    <a class="nav-link @(i == 0 ? "active show" : "")" data-bs-toggle="tab" data-bs-target="#menu-@slug">
                        <h4>@category.Name</h4>
                    </a>
                </li>
            }
        </ul>

        <div class="tab-content" data-aos="fade-up" data-aos-delay="200">
            @for (int i = 0; i < Model.Count; i++)
            {
                var category = Model[i];
                var slug = Slugify(category.Name);
                <div class="tab-pane fade @(i == 0 ? "active show" : "")" id="menu-@slug">

                    <div class="tab-header text-center">
                        <p>Menu</p>
                        <h3>@category.Name</h3>
                    </div>

                    <div class="row gy-5">
                        @foreach (var dish in category.Dishes)
                        {
                            <div class="col-lg-4 menu-item">
                                <a href="assets/img/menu/menu-item-1.png" class="glightbox"><img src="~/assets/img/@dish.Image" class="menu-img img-fluid" alt=""></a>
                                <h4>@dish.Name</h4>
                                <p class="ingredients">
                                    @dish.Description
                                </p>
                                <p class="price">
                                    @dish.Price
                                </p>
                            </div><!-- Menu Item -->
                        }
                      

                    </div>
                </div><!-- End Starter Menu Content -->
            }
        </div>
    </div>

</section>
<!-- /Menu Section -->