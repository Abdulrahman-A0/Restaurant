@model List<Category>

<div class="category">
    <div class="c-view">
        <div>
            <h2> All Category</h2>
        </div>
        <div>
            <button type="button" class="btn btn-success"><a href="/Category/CreateNewCategory"> <i class="bi bi-plus-circle"></i> Add New Category</a> </button>
        </div>

    </div>
    <div class="table-container">

        <table class="table-design table">
            <tr class="thead">
                <td>
                    ID
                </td>
                <td>
                    Name
                </td>
                <td>
                    Update
                </td>
                <td>
                    Delete
                </td>

            </tr>
            @foreach (var category in Model)
            {
                <tr>
                    <td>
                        @category.Id
                    </td>
                    <td>
                        @category.Name
                    </td>
                    <td>
                        <button class="table-icon"><i class="fa-regular fa-pen-to-square" style="color: #d8ac0e;"></i></button>
                    </td>
                    <td>
                        <button class="table-icon"><i class="fa-solid fa-trash-can" style="color: #d33131;"></i></button>
                    </td>

                </tr>
            }
        </table>
    </div>
</div>