<div class="account">
    <div class="account-container">
    <div class="account-box">
            <h2 class="text-center mb-4" style="color:var(--heading-font) !important; font-size:40px !important;">Verify Email</h2>
        <form method="post" action="/account/VerifyEmail">
            <div  class="text-danger"></div>
            <div class="mb-3">
                <label  for="email"class="form-label">Email:</label>
                <input class="form-control" id="email" asp-for="Email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <input type="submit" value="Submit" class="btn btn-success w-100 p-2 btn" />
            <div class="text-center mt-2">
                <a href="/Home/index" class="text-decoration-none mt-3">Back</a>
            </div>
        </form>
    </div>
    </div>
</div>